@model List<Shop.Models.Buy>
@{
    ViewBag.Title = "OrdersList";
    Layout = "~/Views/Shared/_newLayout.cshtml";
}

<h2>OrdersList</h2>

<div class="container">
    <h2>Order List</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Total Amount</th>
                <th>Order Date</th>
                <th>Payment Status</th>
                <th>Order Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.orderid</td>
                    <td>@order.Price</td>
                    <td>@order.BuyDate</td>
                    <td>Paid</td>
                    <td>Delivered</td>
                </tr>
            }
        </tbody>
    </table>
</div>